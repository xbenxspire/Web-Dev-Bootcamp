<% layout('layouts/boilerplate')%>
<!-- Main container for centering the registration form -->
<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <!-- Responsive column for form placement -->
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <!-- Card component to hold the registration form -->
            <div class="card shadow">
                <!-- Header image for the registration card -->
                <img src="https://images.unsplash.com/photo-1631635589499-afd87d52bf64?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1471&q=80"
                    alt="A tent set up in the woods at sunset" class="card-img-top" />
                <small class="text-muted text-center mt-1">Photo by <a href="https://unsplash.com/@davehoefler?utm_source=unsplash&utm_medium=referral&utm_content=creditCopyText">Dave Hoefler</a> on <a href="https://unsplash.com/photos/a-tent-set-up-in-the-woods-at-sunset-a3e7yEtQxJs?utm_source=unsplash&utm_medium=referral&utm_content=creditCopyText">Unsplash</a></small>
                <div class="card-body">
                    <h5 class="card-title">Register</h5>
                    <!-- Registration form -->
                    <form action="/register" method="POST" class="validated-form" novalidate>
                        <!-- Username input field -->
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" required autofocus>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <!-- Email input field -->
                        <div class="mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="email" id="email" name="email" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <!-- Password input field -->
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <!-- Submit button -->
                        <button class="btn btn-success btn-block">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>