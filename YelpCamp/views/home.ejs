            <div class="mt-3">
                <a href="/about" class="text-white-50 me-3">About</a>
                <a href="/citations" class="text-white-50">Image Citations</a>
            </div>
        </footer>

    </div>

    <!-- Bootstrap JS and Popper.js -->
